<%- include ('./partials/header.ejs') %>

<body>
    <%- include ('./partials/navbar.ejs') %> 
    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %> </p>
        <hr>
        <% if (resposta != undefined) { %>
            <h4>Respostas</h4>
        <% } %>
        <% resposta.forEach( resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                    <p>respondida em: <%= resposta.createdAt %></p>
                </div>
            </div>        
        <%}) %> 
        <hr>
        <form method="post" action="/responder">
            <label>Responda: </label>
            <textarea placeholder="Informe a resposta aqui..." class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark">Responda</button>
        </form>
    </div>
</body>

<%- include ('./partials/footer.ejs') %>